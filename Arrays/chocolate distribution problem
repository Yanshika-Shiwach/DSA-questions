class Solution {
  public:
    int findMinDiff(vector<int>& a, int m) {
        // code here
        int n=a.size();
        if(m>n)return -1;
       long diff;
        long ans=INT_MAX;
        sort(a.begin(),a.end());
        for(int i=0;i+m-1<n;i++){
            diff=a[i+m-1]-a[i];
            ans=min(ans,diff);
        }
        return ans;
    }
};
