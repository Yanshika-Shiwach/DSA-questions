class Solution {
  public:
    void rearrange(vector<int>& arr) {
        int n = arr.size();
       sort(arr.begin(),arr.end());
       vector<int>ans;
       int l=0,r=n-1;
       while(l<r){
           ans.push_back(arr[r--]);
           ans.push_back(arr[l++]);
       }
       if(l==r)ans.push_back(arr[l]);
       for(int i=0;i<n;i++)arr[i]=ans[i];
    }
};
