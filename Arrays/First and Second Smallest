class Solution {
  public:
    vector<int> minAnd2ndMin(vector<int> &arr) {
        // code here
        int n=arr.size();
        int smallest=arr[0];
        int Secsmallest=INT_MAX;
        for(int i=0;i<n;i++){
            if(smallest>arr[i]){
                Secsmallest=smallest;
                smallest=arr[i];
                
            }
            if(Secsmallest>arr[i]&&arr[i]>smallest)
            Secsmallest=arr[i];
        }
        if(Secsmallest==INT_MAX)return {-1};
        return{ smallest,Secsmallest};
    }
};
